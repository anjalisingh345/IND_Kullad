<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_Info">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/kullad2"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/kullad_img"
        android:layout_marginTop="20dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullad Name"
        android:layout_below="@+id/kullad_img"
        android:id="@+id/kullad_name"
        android:textSize="25dp"
        android:textColor="@color/sienna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1)"
        android:layout_below="@+id/kullad_img"
        android:layout_marginHorizontal="3dp"
        android:id="@+id/kullad_code"
        android:layout_toRightOf="@+id/kullad_name"
        android:textSize="25dp"
        android:textColor="@color/sienna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/kullad_name"
        android:id="@+id/view"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:background="@color/purple_200"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_toRightOf="@+id/price"
        android:text="1.65Rs"
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>


</RelativeLayout>